<div class="container">
<h2 class="jumbotron"><span class="glyphicon glyphicon-home"></span>&nbsp;&nbsp;Index</h2>
<div class="list-group" style="width:70%; margin: 0px auto;">
<h3 class="list-group-item active">Listado de Peliculas</h3>
<% @peliculas.each do |pelicula| %>
    <br>
	<p class="list-group-item">ID: <%= pelicula.id  %></p>
	<p class="list-group-item">Name: <%= link_to pelicula.name, pelicula %></p>
	<p class="list-group-item">Stars: <%= pelicula.stars %></p>
	<p class="list-group-item">Main_actor: <%= pelicula.main_actor %></p>
	<p class="list-group-item">Year: <%= pelicula.year %></p>
<% end %>
<br>
<p><%=link_to "Añadir pelicula", new_pelicula_path, class:"btn btn-md btn-success" %></p>
</div>

<div class="row">
<% @peliculas.each do |peli|%>
<div class="col-lg-3 col-md-4 col-sm-6">
<div class="latest-movie">
<a href="#"><img src="<%= peli.url %>" style="width:225px; height:
245px;"></a></br>
<p><b>Id:</b> <%= pelicula.id %></p>
<p><b>Nombre:</b> <%= pelicula.name %></p>
<p><b>Director:</b> <%= pelicula.director %></p>
<p><b>Año:</b> <%= pelicula.year %></p>
<p><b>Genero:</b> <%= peli.genre %></p>
<%= link_to select_plan_path(pelicula: peli.id), class: "btn btnprimary"
do %>
<i class="fa fa-search"></i>
<%= t('Comprar') %>
<% end %>
</div> <!-- end latest-movie -->
</div> <!-- end col -->
<%end%>
</div> <!-- end row-->

</div>    


